{
    "compilerOptions": {
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es2015",
        "lib": ["dom", "es2015"]
	}, 
    "allowJs": true,
    "compileOnSave": true,
    "include": [
        "./app",
        "./scripts"
    ],
    "exclude": [
        "node_modules"
    ]
}